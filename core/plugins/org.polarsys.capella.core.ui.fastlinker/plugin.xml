<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.polarsys.capella.views.category"
            class="org.polarsys.capella.core.ui.fastlinker.view.FastLinkerView"
            icon="icons/cview/fastlinker_view16x16.gif"
            id="org.polarsys.capella.core.ui.fastlinker.view"
            name="%view.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:capella.project.explorer#PopupMenu?after=group.show">
         <command
               commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinkerVisibilityEnablementExpression">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=org.polarsys.capella.core.platform.sirius.ui.navigator.showRelatedElementFromDiagram">
         <command
               commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinkerVisibilityEnablementExpression">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.polarsys.capella.core.ui.semantic.browser.view.SemanticBrowserID?after=additions">
         <command
               commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinkerVisibilityEnablementExpression">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.polarsys.capella.core.ui.fastlinker.view?after=additions">
         <command
               commandId="org.polarsys.capella.core.platform.sirius.ui.navigator.showImpactAnalysisCommand"
               id="org.polarsys.capella.core.ui.semantic.browser.sirius.showImpactAnalysis"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeMenuSelection">
                  <and>
                     <iterate>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                     </iterate>
                     <count
                           value="1">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.polarsys.capella.core.platform.sirius.ui.navigator.showInDiagramCommand"
               id="org.polarsys.capella.core.ui.semantic.browser.showInDiagramAction"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeMenuSelection">
                  <and>
                     <iterate>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                     </iterate>
                     <count
                           value="1">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.polarsys.capella.core.ui.semantic.browser.sirius.semanticBrowserSetSelectionCommand"
               id="org.polarsys.capella.core.ui.semantic.browser.sirius.semanticBrowserSetSelection"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeMenuSelection">
                  <and>
                     <iterate>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                     </iterate>
                     <count
                           value="1">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.polarsys.capella.core.platform.sirius.ui.navigator.locateInCapellaExplorerCommand"
               id="org.polarsys.capella.core.platform.sirius.ui.navigator.LocateInCapellaExplorerActionFromDiagram"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeMenuSelection">
                  <and>
                     <iterate>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                     </iterate>
                     <count
                           value="1">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
            schemeId="org.polarsys.capella.core.defaultAcceleratorConfiguration"
            sequence="F6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="capella.sirius.perspective">
         <viewShortcut
               id="org.polarsys.capella.core.ui.fastlinker.view">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.polarsys.capella.core.ui.fastlinker.SendToFastLinkerCommandHandler"
            commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker">
         <enabledWhen>
            <reference
                  definitionId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinkerVisibilityEnablementExpression">
            </reference></enabledWhen>
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
            name="%command.sendToFastLinker.name"
            description="%command.sendToFastLinker.description">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
            icon="icons/cview/fastlinker_view16x16.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.polarsys.capella.core.ui.fastlinker.sendToFastLinkerVisibilityEnablementExpression">
         <or>
            <with
                  variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <or>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                        <instanceof
                              value="org.eclipse.sirius.diagram.ui.edit.api.part.IDiagramElementEditPart">
                        </instanceof>
                     </or>
                  </iterate>
            </with>
            <with
                  variable="selection">
                  <iterate
                        ifEmpty="false">
                     <or>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                        <instanceof
                              value="org.eclipse.sirius.diagram.ui.edit.api.part.IDiagramElementEditPart">
                        </instanceof>
                     </or>
                  </iterate>
            </with>
         </or>
      </definition>
   </extension>
   <extension
         point="org.polarsys.capella.core.preferences.capellaPreferences">
      <category
            name="%view.name">
         <item
               enableByDefault="true"
               id="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker">
         </item>
      </category>
   </extension>
   <extension
         point="org.polarsys.capella.common.helpers.longRunningOperationsListener">
      <listener
            class="org.polarsys.capella.core.ui.fastlinker.listeners.FastLinkerLongRunningOperationListener">
      </listener>
   </extension>

</plugin>
