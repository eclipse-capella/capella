   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.polarsys.capella.core.copyAs?after=org.polarsys.capella.core.ui.properties.richtext.CopyAsDescriptionLink">
         <command
               commandId="org.polarsys.capella.core.sirius.ui.copyAsText"
               icon="icons/copy.gif"
               label="%command.copyAsText"
               style="push">
            <visibleWhen
                  checkEnabled="true">
                  <with
		               variable="selection">
		               <iterate 
		                   ifEmpty="false">
		              </iterate>
		         </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution 
      		locationURI="popup:capella.project.explorer#PopupMenu?after=group.project">
         <command
               commandId="org.polarsys.capella.core.sirius.ui.refreshAird"
               label="%command.refreshDiagrams"
               style="push">
            <visibleWhen checkEnabled="true">
               <with variable="selection">
                  <and>
                     <iterate>
                        <or>
                           <and>
                              <instanceof
                                    value="org.eclipse.core.resources.IFile">
                              </instanceof>
                              <test
                                    forcePluginActivation="true"
                                    property="org.eclipse.core.resources.extension"
                                    value="aird">
                              </test>
                           </and>
                           <instanceof
                                 value="org.polarsys.capella.common.data.modellingcore.ModelElement">
                           </instanceof>
                        </or>
                     </iterate>
                     <count value="1">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.polarsys.capella.core.sirius.ui.removeHiddenElements"
               label="%command.removeHiddenElements"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="selection">
                  <and>
                     <iterate>
                        <or>
                           <and>
                              <instanceof
                                    value="org.eclipse.core.resources.IFile">
                              </instanceof>
                              <test
                                    forcePluginActivation="true"
                                    property="org.eclipse.core.resources.extension"
                                    value="aird">
                              </test>
                           </and>
                           <instanceof
                                 value="org.polarsys.capella.common.data.modellingcore.ModelElement">
                           </instanceof>
                        </or>
                     </iterate>
                     <count
                           value="1">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      
   </extension>
   
