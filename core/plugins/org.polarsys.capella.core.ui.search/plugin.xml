<plugin>
   <extension
         point="org.eclipse.search.searchPages">
      <page
            class="org.polarsys.capella.core.ui.search.CapellaSearchPage"
            icon="icons/search.gif"
            id="org.polarsys.capella.core.ui.search.page"
            label="Capella Search"
            tabPosition="0"
			extensions="*:1"
			canSearchEnclosingProjects="false"
            showScopeSection="false">
      </page>
   </extension>
   <extension
         point="org.eclipse.search.searchResultViewPages">
      <viewPage
            class="org.polarsys.capella.core.ui.search.CapellaSearchResultPage"
            icon="icons/search.gif"
            id="org.polarsys.capella.core.ui.search.resultViewPage"
            label="Capella Search Result"
            searchResultClass="org.polarsys.capella.core.ui.search.CapellaSearchResult">
      </viewPage>
   </extension>
	<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.search.ui.views.SearchView?after=additions">
         <separator
               name="group.showIn"
               visible="true">
         </separator>
         <separator
               name="group.sendTo"
               visible="true">
         </separator>
         <separator
               name="group.replace"
               visible="true">
         </separator>
         <command
               commandId="org.polarsys.capella.core.ui.search.commands.replaceSelected"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activePart">
                  <instanceof
                        value="org.eclipse.search.ui.ISearchResultViewPart">
                  </instanceof>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.polarsys.capella.core.ui.search.commands.replaceAll"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activePart">
                  <instanceof
                        value="org.eclipse.search.ui.ISearchResultViewPart">
                  </instanceof>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=group.showIn">
         <command
               commandId="org.polarsys.capella.core.ui.search.commands.select"
               icon="icons/search.gif"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                   <with
                     variable="selection">
	                  <and>
	                     <count
	                           value="1">
	                     </count>
	                     <iterate>
	                        <or>
	                           <instanceof
	                                 value="org.eclipse.sirius.viewpoint.DRepresentationDescriptor">
	                           </instanceof>
	                           <adapt
	                                 type="org.eclipse.sirius.viewpoint.DRepresentationDescriptor">
	                           </adapt>
	                           <instanceof
	                                 value="org.eclipse.emf.ecore.EObject">
	                           </instanceof>
	                           <adapt
	                                 type="org.eclipse.emf.ecore.EObject">
	                           </adapt>
                            <instanceof
                                  value="org.eclipse.core.resources.IProject">
                            </instanceof>
                            <adapt
                                  type="org.eclipse.core.resources.IProject">
                            </adapt>
	                        </or>
	                     </iterate>
	                  </and>
               		</with>
                  <with
                        variable="activePart">
                     <not>
                        <instanceof
                              value="org.eclipse.search.ui.ISearchResultViewPart">
                        </instanceof>
                     </not>
                  </with></and>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.polarsys.capella.core.ui.search.CapellaSearchResultPageHandlerReplaceSelected"
            id="org.polarsys.capella.core.ui.search.commands.replaceSelected"
            name="Replace Selected...">
      </command>
      <command
            defaultHandler="org.polarsys.capella.core.ui.search.CapellaSearchResultPageHandlerReplaceAll"
            id="org.polarsys.capella.core.ui.search.commands.replaceAll"
            name="Replace All...">
      </command>
      <command
            defaultHandler="org.polarsys.capella.core.ui.search.CapellaSearchResultPageHandlerSelect"
            id="org.polarsys.capella.core.ui.search.commands.select"
            name="Show In Search">
      </command>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="help/toc.xml"
            primary="false">
      </toc>
   </extension>
</plugin>
