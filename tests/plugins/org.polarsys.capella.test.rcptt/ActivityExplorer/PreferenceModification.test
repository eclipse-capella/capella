------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Capella Project Explorer" | get-tree | get-menu "New/Capella Project" | click
with [get-window "New Capella Project"] {
    get-editbox | set-text Project
    get-button Finish | click
}
get-view "Capella Project Explorer" | get-tree | select "Project/Project.aird" | get-menu Close | click
get-preferences-menu | click
with [get-window Preferences] {
    get-tree | select "Activity Explorer/Management"
    with [get-tree -after [get-label "Select element:"]] {
        select "Operational Analysis"
        get-item "Operational Analysis" | uncheck
    }
    get-button OK | click
}
get-view "Capella Project Explorer" | get-tree | select "Project/Project.aird" | get-menu "Open Session" | click
get-view "Capella Project Explorer" | get-tree | select "Project/Project.aird" | get-menu "Open Activity Explorer" 
    | click

with [get-editor "Project" | get-tab-folder] {
    verify-error {get-tab-item "Operational Analysis"}
}

get-preferences-menu | click
with [get-window Preferences] {
    with [get-tree -after [get-label "Select element:"]] {
        select "Operational Analysis"
        get-item "Operational Analysis" | check
    }
    get-button Apply | click
}
get-window Preferences | get-button OK | click
with [get-editor "Project" | get-tab-folder] {
    get-tab-item "Operational Analysis" | click
}
